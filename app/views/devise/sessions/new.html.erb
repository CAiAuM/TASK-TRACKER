<div class="container">
  <div class="row justify-content-center m-5">
    <div class="col-lg-4 col-md-6 col-8 bg-white m-3 rounded-4">
      <h2 class="m-3 text-center">Sing in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "my-3 btn btn-primary"%>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
